<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/actionbar_comm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <com.widget.iconify.IconTextView
            android:id="@+id/iv_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="{fa-qrcode}"
            android:textColor="@color/grayDark"
            android:textSize="@dimen/font_4xbig" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <EditText
                android:id="@+id/tv_scan_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:hint="会员号或手机号"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:textColor="@color/grayDark"
                android:textSize="@dimen/font_middle"
                tools:text="13524802105;0101000008621" />

            <com.widget.iconify.IconTextView
                android:id="@+id/iv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:paddingLeft="0dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="{fa-check}"
                android:textColor="@color/grayDark"
                android:textSize="@dimen/font_4xbig" />
        </FrameLayout>

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_btn_gray"
            android:padding="4dp"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_middle" />

        <TextView
            android:id="@+id/btn_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:background="@drawable/bg_btn_gray"
            android:padding="4dp"
            android:text="整单折扣"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_middle" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_memo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary"
            android:gravity="center"
            android:padding="16dp"
            android:text="备注"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_middle" />

        <Space
            android:layout_width="0.5dp"
            android:layout_height="0.5dp" />

        <TextView
            android:id="@+id/btn_guadan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary"
            android:gravity="center"
            android:padding="16dp"
            android:text="挂单"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_middle" />

        <Space
            android:layout_width="0.5dp"
            android:layout_height="0.5dp" />

        <TextView
            android:id="@+id/btn_jiedan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary"
            android:gravity="center"
            android:padding="16dp"
            android:text="解单"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_middle" />

        <Space
            android:layout_width="0.5dp"
            android:layout_height="0.5dp" />

        <FrameLayout
            android:id="@+id/btn_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_primary" >

            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"
                android:text="结算"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_middle" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>